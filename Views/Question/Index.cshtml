@model IEnumerable<BilgiYarismasiMVC.Models.Question>
@{
    ViewData["Title"] = "Soru Listesi";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Sorular</h2>
        <a class="btn btn-success" asp-action="Create">Yeni Soru Ekle</a>
    </div>

    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-dark text-center">
            <tr>
                <th>ID</th>
                <th>Soru</th>
                <th>Zorluk</th>
                <th>Doğru Şık</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.QuestionText</td>
                    <td>@item.Difficulty</td>
                    <td>@item.CorrectOption</td>
                    <td class="text-center">
                        <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
