@model BilgiYarismasiMVC.Models.Question
@{
    ViewData["Title"] = "Soru Sil";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="alert alert-danger shadow-sm">
        <h4 class="alert-heading">Bu soruyu silmek istediğinize emin misiniz?</h4>
        <hr />
        <p><strong>Soru:</strong> @Model.QuestionText</p>
        <p><strong>Doğru Şık:</strong> @Model.CorrectOption</p>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Evet, Sil</button>
            <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
        </form>
    </div>
</div>
